<script type="text/javascript">

    function SelectedIndexChanged() {

        var select = $("#ddlCollection option:selected").text();

        $.ajax({
            type: "GET",
            url: "/Index/?handler=List&selectedCollection=" + select,
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                //console.log(response);
                var head = $('#noteTable > thead tr');
                var table = $('#noteTable');
                var fields = JSON.parse(response);
                var tr = $('<tr></tr>');

                for (x in fields[0]) {
                    head.append('<th>' + x + '</th>');
                }


                table.dynatable({
                    features: {
                        paginate: false,
                        search: false,
                        recordCount: false
                    },
                    bodyRowSelector: 'tr',
                    writers: {
                        edit: function (record) {
                            var editCommand = "<a href = Edit/" + record.id + "/" + select + ">Edit</a>"
                            return editCommand;
                        },
                        delete: function (record) {
                            var deleteCommand = "<a href =/Index/?handler=Delete&recordId=" + record.id.trim() + "&collection=" + select + "&pVal=" + record.name + ">Delete</a>"
                            return deleteCommand;

                        }
                    },
                    dataset: {
                        records: fields
                    }
                });

            },
            failure: function (response) {
                //alert(response);
            }
        });
    }



</script>  